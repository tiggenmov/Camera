<?xml version='1.0' encoding='utf-8'?>
<widget id="com.glamai.makeupstudio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GlamAI Makeup Studio</name>
    <description>
        AI-powered virtual makeup try-on with skin analysis and beauty recommendations
    </description>
    <author email="support@glamai.app" href="https://glamai.app">
        GlamAI Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <!-- Android Configuration -->
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/icon-192-xxxhdpi.png" />
        
        <splash density="land-ldpi" src="res/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="res/android/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="res/android/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="res/android/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="res/android/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="res/android/splash-land-xxxhdpi.png" />
        <splash density="port-ldpi" src="res/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="res/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="res/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/android/splash-port-xxxhdpi.png" />
    </platform>
    
    <!-- iOS Configuration -->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="res/ios/icon-57.png" width="57" />
        <icon height="72" src="res/ios/icon-72.png" width="72" />
        <icon height="76" src="res/ios/icon-76.png" width="76" />
        <icon height="114" src="res/ios/icon-114.png" width="114" />
        <icon height="120" src="res/ios/icon-120.png" width="120" />
        <icon height="144" src="res/ios/icon-144.png" width="144" />
        <icon height="152" src="res/ios/icon-152.png" width="152" />
        <icon height="180" src="res/ios/icon-180.png" width="180" />
        
        <splash height="1136" src="res/ios/splash-1136.png" width="640" />
        <splash height="1334" src="res/ios/splash-1334.png" width="750" />
        <splash height="2208" src="res/ios/splash-2208.png" width="1242" />
        <splash height="2436" src="res/ios/splash-2436.png" width="1125" />
        <splash height="2732" src="res/ios/splash-2732.png" width="2048" />
    </platform>
    
    <!-- Permissions -->
    <plugin name="cordova-plugin-camera" spec="^6.0.0" />
    <plugin name="cordova-plugin-file" spec="^6.0.0" />
    <plugin name="cordova-plugin-media-capture" spec="^3.0.0" />
    <plugin name="cordova-plugin-device" spec="^2.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^5.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.0" />
    
    <!-- Preferences -->
    <preference name="orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FF4081" />
    <preference name="AndroidWindowSoftInputMode" value="adjustResize" />
    
    <!-- Features -->
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    
    <!-- Icons and Splash Screens -->
    <icon src="icon.png" />
    <splash src="splash.png" />
</widget>
